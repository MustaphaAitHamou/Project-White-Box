{
  "ci": {
    "collect": {
      "startServerCommand": "npx -y http-server dist -p 4173 -s --cors",
      "startServerReadyPattern": "(?:127\\.0\\.0\\.1|localhost):4173",
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/create-trip"
      ],
      "numberOfRuns": 2,
      "settings": {
        "formFactor": "desktop",
        "screenEmulation": {
          "mobile": false,
          "width": 1366,
          "height": 768,
          "deviceScaleFactor": 1,
          "disabled": false
        },
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "skipAudits": [
          "canonical",
          "errors-in-console",
          "robots-txt",
          "valid-source-maps",
          "network-dependency-tree-insight"
        ]
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["error", { "minScore": 0.9 }],
        "categories:seo": ["warn", { "minScore": 0.82 }],
        "categories:performance": ["warn", { "minScore": 0.65 }],
        "canonical": "off",
        "errors-in-console": "off",
        "robots-txt": "off",
        "valid-source-maps": "off",
        "network-dependency-tree-insight": "off",
        "unminified-javascript": "off",
        "unsized-images": "off",
        "unused-javascript": "off",
        "legacy-javascript": ["warn", { "maxLength": 5 }],
        "render-blocking-insight": ["warn", { "maxLength": 5 }],
        "cache-insight": ["warn", { "maxLength": 5 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    }
  }
}
