{
    "ci": {
      "collect": {
        "staticDistDir": "dist",
        "numberOfRuns": 1,
        "chromeFlags": "--no-sandbox --headless=new --disable-dev-shm-usage"
      },
      "assert": {
        "preset": "lighthouse:no-pwa",
        "assertions": {
          "categories:performance": ["warn", 0.75],
          "categories:accessibility": ["error", 0.90]
        }
      },
      "upload": {
        "target": "temporary-public-storage"
      }
    }
  }
  